{
  "name": "tracking-consent-frontend",
  "version": "0.0.1",
  "description": "Frontend components for tracking consent solution",
  "author": "HMRC",
  "license": "Apache-2.0",
  "scripts": {
    "start": "webpack --mode production --watch",
    "build": "webpack --mode production",
    "lint": "stylelint \"js/styles/**/*.scss\" && eslint js",
    "lint:fix": "stylelint --fix \"js/styles/**/*.scss\" && eslint js --fix",
    "backstop": "node js/test/backstop/backstop.js test",
    "backstop:server": "node js/test/backstop/server.js",
    "backstop:approve": "node js/test/backstop/backstop.js approve",
    "test": "jest --collectCoverage js && npm run lint"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "standardx": {
    "env": [
      "jest"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "dependencies": {
    "@babel/core": "7.10.1",
    "@babel/plugin-transform-runtime": "7.10.1",
    "@babel/preset-env": "7.10.1",
    "babel-loader": "8.1.0",
    "core-js": "3.6.5",
    "css-loader": "5.2.6",
    "dot-properties": "1.0.1",
    "govuk-frontend": "3.11.0",
    "js-cookie": "2.2.1",
    "node-sass": "6.0.1",
    "sass-loader": "12.1.0",
    "style-loader": "1.2.1",
    "ts-loader": "6.2.1",
    "typescript": "3.8.3",
    "webpack": "5.40.0",
    "webpack-cli": "3.3.11"
  },
  "devDependencies": {
    "@testing-library/dom": "6.15.0",
    "@testing-library/jest-dom": "5.1.1",
    "@types/jest": "25.1.4",
    "@typescript-eslint/eslint-plugin": "4.10.0",
    "@typescript-eslint/parser": "2.23.0",
    "backstopjs": "^5.4.4",
    "eslint": "7.2.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "express": "4.17.1",
    "html-loader-jest": "0.2.1",
    "husky": "4.2.3",
    "identity-obj-proxy": "3.0.0",
    "jest": "^27.3.1",
    "jsdom": "16.2.2",
    "standardx": "5.0.0",
    "stylelint": "13.13.1",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-scss": "3.16.0",
    "ts-jest": "27.0.7"
  }
}
