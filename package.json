{
  "name": "tracking-consent-frontend",
  "version": "0.0.1",
  "description": "Frontend components for tracking consent solution",
  "author": "HMRC",
  "license": "Apache-2.0",
  "scripts": {
    "start": "webpack --mode production --watch",
    "build": "webpack --mode production",
    "audit": "better-npm-audit audit",
    "lint": "stylelint \"js/styles/**/*.scss\" && eslint js",
    "lint:fix": "stylelint --fix \"js/styles/**/*.scss\" && eslint js --fix",
    "backstop": "node js/test/backstop/backstop.js test",
    "backstop:server": "node js/test/backstop/server.js",
    "backstop:approve": "node js/test/backstop/backstop.js approve",
    "test": "jest --collectCoverage js && npm run lint",
    "prepare": "husky"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "standardx": {
    "env": [
      "jest"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "dependencies": {
    "@babel/core": "7.26.9",
    "@babel/plugin-transform-runtime": "7.26.9",
    "@babel/preset-env": "7.26.9",
    "babel-loader": "9.1.3",
    "core-js": "3.40.0",
    "css-loader": "7.1.2",
    "dot-properties": "1.1.0",
    "govuk-frontend": "5.10.1",
    "js-cookie": "^3.0.5",
    "playwright": "1.49.1",
    "style-loader": "4.0.0",
    "ts-loader": "9.5.2",
    "typescript": "5.4.5",
    "webpack": "5.98.0",
    "webpack-cli": "5.1.4"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.26.0",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "backstopjs": "6.3.25",
    "better-npm-audit": "^3.7.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-plugin-import": "^2.29.1",
    "express": "^5.1.0",
    "husky": "9.1.7",
    "identity-obj-proxy": "3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-loader": "^1.0.0",
    "jest-jasmine2": "^29.7.0",
    "jsdom": "^16.2.2",
    "node-sass": "9.0.0",
    "playwright-chromium": "1.49.1",
    "playwright-core": "1.49.1",
    "sass-loader": "14.2.1",
    "standardx": "^7.0.0",
    "stylelint": "^16.21.0",
    "stylelint-config-gds": "^2.0.0",
    "ts-jest": "^29.1.4"
  },
  "overrides": {
    "playwright": "$playwright-core",
    "rimraf": "^4.0.0"
  }
}
