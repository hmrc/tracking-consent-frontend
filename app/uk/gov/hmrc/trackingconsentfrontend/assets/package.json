{
  "name": "tracking-consent-frontend",
  "version": "0.0.1",
  "description": "Frontend components for tracking consent solution",
  "main": "index.ts",
  "author": "HMRC",
  "license": "Apache-2.0",
  "scripts": {
    "start": "NODE_ENV=develop webpack-dev-server --config ./webpack.config.js --mode development",
    "build": "webpack --mode production",
    "lint": "stylelint \"**/*.scss\" && standardx **/*.ts",
    "fixlint": "stylelint --fix \"**/*.scss\" && standardx --fix **/*.ts",
    "test": "jest --collectCoverage && npm run lint",
    "analyze": "webpack --mode production --profile --json > stats.json && webpack-bundle-analyzer stats.json"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "standardx": {
    "env": [
      "jest"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^6.15.0",
    "@testing-library/jest-dom": "^5.1.1",
    "@types/jest": "^25.1.4",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^25.1.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-html-import-require-to-string": "0.0.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "dot-properties": "^1.0.1",
    "govuk-frontend": "^3.6.0",
    "html-loader": "^0.5.5",
    "html-loader-jest": "^0.2.1",
    "husky": "^4.2.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.1.0",
    "jest-environment-jsdom-fourteen": "^1.0.1",
    "js-cookie": "^2.2.1",
    "node-sass": "^4.13.1",
    "sass-loader": "^8.0.2",
    "standardx": "^5.0.0",
    "style-loader": "^1.1.3",
    "stylelint": "^13.2.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.16.0",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.42.0",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  }
}
