{
  "name": "tracking-consent-frontend",
  "version": "0.0.1",
  "description": "Frontend components for tracking consent solution",
  "main": "index.ts",
  "author": "HMRC",
  "license": "Apache-2.0",
  "scripts": {
    "start": "webpack --mode production --watch",
    "build": "webpack --mode production",
    "lint": "stylelint \"**/*.scss\" && standardx **/*.ts **/*.spec.ts",
    "fixlint": "stylelint --fix \"**/*.scss\" && standardx --fix **/*.ts **/*.spec.ts",
    "test": "jest --collectCoverage && npm run lint",
    "analyze": "webpack --mode production --profile --json > stats.json && webpack-bundle-analyzer stats.json"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "standardx": {
    "env": [
      "jest"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "dependencies": {
    "govuk-frontend": "3.6.0",
    "js-cookie": "2.2.1",
    "@babel/core": "7.10.1",
    "@babel/plugin-transform-runtime": "7.10.1",
    "@babel/preset-env": "7.10.1",
    "babel-loader": "8.1.0",
    "core-js": "3.6.5",
    "css-loader": "3.4.2",
    "dot-properties": "1.0.1",
    "node-sass": "4.14.1",
    "sass-loader": "8.0.2",
    "style-loader": "1.2.1",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11",
    "typescript": "3.8.3",
    "ts-loader": "6.2.1"
  },
  "devDependencies": {
    "@testing-library/dom": "6.15.0",
    "@testing-library/jest-dom": "5.1.1",
    "@types/jest": "25.1.4",
    "@typescript-eslint/eslint-plugin": "2.23.0",
    "@typescript-eslint/parser": "2.23.0",
    "html-loader-jest": "0.2.1",
    "husky": "4.2.3",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.1.0",
    "jsdom": "16.2.2",
    "standardx": "5.0.0",
    "stylelint": "13.2.1",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-scss": "3.16.0",
    "ts-jest": "26.1.1",
    "webpack-bundle-analyzer": "3.6.0"
  }
}
