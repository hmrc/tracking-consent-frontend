{
  "extends": [
    "airbnb-base"
  ],
  "root": true,
  "env": {
    "browser": true
  },
  "ignorePatterns": [
    "src/entrypoints/optimizely.js",
    "test/backstop/public/**/*",
    "test/backstop/backstop_data/**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "extends": [
        "airbnb-typescript"
      ],
      "parserOptions": {
        "project": "./tsconfig.json"
      },
      "settings": {
        "react": {
          "version": "latest"
        }
      }
    },
    {
      "files": [
        "test/**/*"
      ],
      "env": {
        "browser": true,
        "jest": true
      }
    }
  ]
}
